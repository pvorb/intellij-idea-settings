<application>
  <component name="LanguageInjectionConfiguration">
    <option name="INSTRUMENTATION" value="ASSERT" />
    <option name="LANGUAGE_ANNOTATION" value="org.intellij.lang.annotations.Language" />
    <option name="PATTERN_ANNOTATION" value="org.intellij.lang.annotations.Pattern" />
    <option name="SUBST_ANNOTATION" value="org.intellij.lang.annotations.Subst" />
    <option name="RESOLVE_REFERENCES" value="true" />
    <injection language="HTML" injector-id="java">
      <display-name>InputSanitizer.sanitize (de.vorb.platon.util)</display-name>
      <place><![CDATA[psiParameter().ofMethod(0, psiMethod().withName("sanitize").withParameters("java.lang.String").definedInClass("de.vorb.platon.util.InputSanitizer"))]]></place>
    </injection>
    <injection language="HTML" injector-id="java">
      <display-name>JEditorPane.setText (javax.swing)</display-name>
      <place><![CDATA[psiParameter().ofMethod(0, psiMethod().withName("setText").withParameters("java.lang.String").definedInClass("javax.swing.JEditorPane"))]]></place>
    </injection>
    <injection language="HTML" injector-id="java">
      <display-name>JLabel.setText (javax.swing)</display-name>
      <place><![CDATA[psiParameter().ofMethod(0, psiMethod().withName("setText").withParameters("java.lang.String").definedInClass("javax.swing.JLabel"))]]></place>
    </injection>
    <injection language="HTML" injector-id="xml">
      <display-name>a/@href</display-name>
      <place><![CDATA[xmlAttribute().withLocalName(string().equalTo("href")).withParent(xmlTag().withLocalName(string().equalTo("a")).withNamespace(string().equalTo("http://www.w3.org/1999/html")))]]></place>
    </injection>
    <injection language="JavaScript" injector-id="xml">
      <display-name>div/@id</display-name>
      <place><![CDATA[xmlAttribute().withLocalName(string().equalTo("id")).withParent(xmlTag().withLocalName(string().equalTo("div")).withNamespace(string().equalTo("http://www.w3.org/1999/html")))]]></place>
    </injection>
  </component>
</application>